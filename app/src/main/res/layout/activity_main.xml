    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/trf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mannualControll"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="162dp"
        android:text="MANUAL CONTROL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <Button
        android:id="@+id/humanDetection"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="257dp"
        android:text="human following"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mannualControll" />


    <Button
        android:id="@+id/ocr"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="257dp"
        android:text="ocr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/humanDetection"
        app:layout_constraintTop_toBottomOf="@+id/mannualControll"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/colorDetection"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="104dp"
        android:text="color detection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humanDetection" />
